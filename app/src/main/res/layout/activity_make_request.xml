<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MakeRequestActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:text="Write down the property detail including property address for the Renters"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text= " कृपया, रेंटर्स के लिए संपत्ति का पता सहित संपत्ति का विवरण लिखें" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_background">
        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:minLines="8"
            android:maxLines="12"
            android:hint="Message"
            android:cursorVisible="false"
            android:background="@null"
            android:textColorHint="@android:color/black"
            android:gravity="top"
            android:textAlignment="gravity"
            android:textColor="@android:color/black"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/post_image"
                android:padding="8dp"
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:background="@drawable/upload"/>
            <TextView
                android:id="@+id/choose_text"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/choose_image"
                android:textColor="@android:color/holo_blue_dark"/>

         </LinearLayout>
        <Button
            android:id="@+id/submit_button"
            android:text="Upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>



    </LinearLayout>


</ScrollView>